            {
                id: 12,
                title: "–û—Ç—Ä–∞–±–æ—Ç–∫–∞ –∞–≤–∞—Ä–∏–π–Ω—ã—Ö –ø—Ä–æ—Ü–µ–¥—É—Ä",
                desc: "–ö–æ–º–∞–Ω–¥–∞ –ø—Ä–æ–≤–æ–¥–∏—Ç —É—á–µ–Ω–∏—è DR –Ω–∞ –æ—Å–Ω–æ–≤–µ –ø–ª–∞–Ω–∞ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è",
                correct: "internalization",
                icon: "üö®"
            }
        ];

        let cardPlacements = {};
        let draggedCard = null;
        let hintsUsed = 0;

        function init() {
            const poolCards = document.getElementById('poolCards');
            const shuffled = [...cards].sort(() => Math.random() - 0.5);

            shuffled.forEach(card => {
                poolCards.appendChild(createCardElement(card));
            });

            // Setup drop zones
            document.querySelectorAll('.quadrant-cards').forEach(zone => {
                zone.addEventListener('dragover', handleDragOver);
                zone.addEventListener('dragleave', handleDragLeave);
                zone.addEventListener('drop', handleDrop);
            });

            document.getElementById('poolCards').addEventListener('dragover', handleDragOver);
            document.getElementById('poolCards').addEventListener('dragleave', handleDragLeave);
            document.getElementById('poolCards').addEventListener('drop', handleDropToPool);
        }

        function createCardElement(card) {
            const div = document.createElement('div');
            div.className = 'card';
            div.draggable = true;
            div.dataset.id = card.id;
            div.innerHTML = `
                <div class="card-icon">${card.icon}</div>
                <div class="card-title">${card.title}</div>
                <div class="card-desc">${card.desc}</div>
            `;

            div.addEventListener('dragstart', handleDragStart);
            div.addEventListener('dragend', handleDragEnd);

            return div;
        }

        function handleDragStart(e) {
            draggedCard = e.target;
            e.target.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
        }

        function handleDragEnd(e) {
            e.target.classList.remove('dragging');
            document.querySelectorAll('.quadrant').forEach(q => q.classList.remove('drag-over'));
        }

        function handleDragOver(e) {
            e.preventDefault();
            const quadrant = e.target.closest('.quadrant');
            if (quadrant) {
                quadrant.classList.add('drag-over');
            }
        }

        function handleDragLeave(e) {
            const quadrant = e.target.closest('.quadrant');
            if (quadrant && !quadrant.contains(e.relatedTarget)) {
                quadrant.classList.remove('drag-over');
            }
        }

        function handleDrop(e) {
            e.preventDefault();
            const quadrant = e.target.closest('.quadrant');
            if (quadrant && draggedCard) {
                const cardsContainer = quadrant.querySelector('.quadrant-cards');
                cardsContainer.appendChild(draggedCard);
                cardPlacements[draggedCard.dataset.id] = quadrant.dataset.quadrant;
                quadrant.classList.remove('drag-over');
            }
        }

        function handleDropToPool(e) {
            e.preventDefault();
            if (draggedCard) {
                document.getElementById('poolCards').appendChild(draggedCard);
                delete cardPlacements[draggedCard.dataset.id];
            }
        }

        function resetCards() {
            const poolCards = document.getElementById('poolCards');
            document.querySelectorAll('.card').forEach(card => {
                card.classList.remove('correct', 'incorrect');
                poolCards.appendChild(card);
            });
            cardPlacements = {};
            document.getElementById('result').className = 'result';
            document.getElementById('result').innerHTML = '';
            hintsUsed = 0;
        }

        function showHint() {
            const unplacedCards = cards.filter(c => !cardPlacements[c.id]);
            if (unplacedCards.length === 0) {
                alert('–í—Å–µ –∫–∞—Ä—Ç–æ—á–∫–∏ —É–∂–µ —Ä–∞–∑–º–µ—â–µ–Ω—ã!');
                return;
            }

            const randomCard = unplacedCards[Math.floor(Math.random() * unplacedCards.length)];
            const quadrantNames = {
                socialization: '–°–æ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è (Tacit ‚Üí Tacit)',
                externalization: '–≠–∫—Å—Ç–µ—Ä–Ω–∞–ª–∏–∑–∞—Ü–∏—è (Tacit ‚Üí Explicit)',
                combination: '–ö–æ–º–±–∏–Ω–∞—Ü–∏—è (Explicit ‚Üí Explicit)',
                internalization: '–ò–Ω—Ç–µ—Ä–Ω–∞–ª–∏–∑–∞—Ü–∏—è (Explicit ‚Üí Tacit)'
            };

            alert(`–ü–æ–¥—Å–∫–∞–∑–∫–∞ –¥–ª—è "${randomCard.title}":\n\n–≠—Ç–æ –ø—Ä–∏–º–µ—Ä ${quadrantNames[randomCard.correct]}`);
            hintsUsed++;
        }

        function checkAnswers() {
            let correct = 0;
            const total = cards.length;

            cards.forEach(card => {
                const cardElement = document.querySelector(`[data-id="${card.id}"]`);
                const placement = cardPlacements[card.id];

                if (placement === card.correct) {
                    correct++;
                    cardElement.classList.add('correct');
                    cardElement.classList.remove('incorrect');
                } else if (placement) {
                    cardElement.classList.add('incorrect');
                    cardElement.classList.remove('correct');
                } else {
                    cardElement.classList.remove('correct', 'incorrect');
                }
            });

            const placed = Object.keys(cardPlacements).length;
            const percentage = Math.round((correct / total) * 100);

            const resultDiv = document.getElementById('result');

            if (placed < total) {
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `
                    <h3>–ù–µ –≤—Å–µ –∫–∞—Ä—Ç–æ—á–∫–∏ —Ä–∞–∑–º–µ—â–µ–Ω—ã!</h3>
                    <p>–†–∞–∑–º–µ—â–µ–Ω–æ: ${placed} –∏–∑ ${total}. –†–∞—Å–ø—Ä–µ–¥–µ–ª–∏—Ç–µ –≤—Å–µ –∫–∞—Ä—Ç–æ—á–∫–∏ –ø–æ –∫–≤–∞–¥—Ä–∞–Ω—Ç–∞–º.</p>
                `;
                return;
            }

            if (correct === total) {
                resultDiv.className = 'result success';
                resultDiv.innerHTML = `
                    <h3>–ü—Ä–µ–≤–æ—Å—Ö–æ–¥–Ω–æ! –í—Å–µ –æ—Ç–≤–µ—Ç—ã –≤–µ—Ä–Ω—ã!</h3>
                    <p>–í—ã –æ—Ç–ª–∏—á–Ω–æ –ø–æ–Ω–∏–º–∞–µ—Ç–µ –º–æ–¥–µ–ª—å SECI –∏ –ø—Ä–æ—Ü–µ—Å—Å—ã –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è –∑–Ω–∞–Ω–∏–π –≤ –ò–¢-—Å–ª—É–∂–±–µ.</p>
                    ${hintsUsed > 0 ? `<p style="color:#888;margin-top:10px;">–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–æ –ø–æ–¥—Å–∫–∞–∑–æ–∫: ${hintsUsed}</p>` : ''}
                    <p style="margin-top:10px;color:#888;">–†–µ–∑—É–ª—å—Ç–∞—Ç: ${correct}/${total} (${percentage}%)</p>
                `;
            } else if (correct >= total * 0.7) {
                resultDiv.className = 'result partial';
                resultDiv.innerHTML = `
                    <h3>–•–æ—Ä–æ—à–∏–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç!</h3>
                    <p>–ü—Ä–∞–≤–∏–ª—å–Ω—ã—Ö –æ—Ç–≤–µ—Ç–æ–≤: ${correct} –∏–∑ ${total} (${percentage}%)</p>
                    <p style="margin-top:10px;color:#888;">–ö—Ä–∞—Å–Ω–∞—è —Ä–∞–º–∫–∞ ‚Äî –Ω–µ–≤–µ—Ä–Ω–æ–µ —Ä–∞–∑–º–µ—â–µ–Ω–∏–µ. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑!</p>
                `;
            } else {
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `
                    <h3>–ï—Å—Ç—å –æ—à–∏–±–∫–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑!</h3>
                    <p>–ü—Ä–∞–≤–∏–ª—å–Ω—ã—Ö –æ—Ç–≤–µ—Ç–æ–≤: ${correct} –∏–∑ ${total} (${percentage}%)</p>
                    <p style="margin-top:10px;color:#888;">–ü–µ—Ä–µ—á–∏—Ç–∞–π—Ç–µ –æ–ø–∏—Å–∞–Ω–∏—è –∫–≤–∞–¥—Ä–∞–Ω—Ç–æ–≤ –∏ –ø–æ–¥—É–º–∞–π—Ç–µ –æ —Ç–∏–ø–µ –∑–Ω–∞–Ω–∏—è –≤ –∫–∞–∂–¥–æ–º –ø—Ä–∏–º–µ—Ä–µ.</p>
                `;
            }
        }

        // Initialize on load
        init();
    </script>
</body>
</html>
